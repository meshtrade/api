# EditorConfig for Mesh API Java SDK
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.properties]
indent_style = space
indent_size = 4

[pom.xml]
indent_style = space
indent_size = 4
