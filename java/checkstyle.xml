<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle configuration for Mesh API Java SDK

    Based on Google Java Style Guide with project-specific customizations:
    - 120-character line limit (adjusted for Java verbosity)
    - Comprehensive JavaDoc requirements for public APIs
    - Strict import organization
    - Consistent naming conventions

    See: https://google.github.io/styleguide/javaguide.html
-->

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Excludes all 'module-info.java' files -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value="module\-info\.java$"/>
    </module>

    <!-- Suppress all checks for files with protobuf generated code marker -->
    <module name="SuppressWithPlainTextCommentFilter">
        <property name="offCommentFormat" value="Generated by the protocol buffer compiler"/>
        <property name="checkFormat" value=".*"/>
    </module>

    <!-- Suppress all checks for files with meshjava generated code marker -->
    <module name="SuppressWithPlainTextCommentFilter">
        <property name="offCommentFormat" value="Generated by protoc-gen-meshjava"/>
        <property name="checkFormat" value=".*"/>
    </module>

    <!-- Exclude gRPC service stubs (generated by protobuf-maven-plugin) -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value=".*ServiceGrpc\.java$"/>
    </module>

    <!-- Enforce Unix line endings -->
    <module name="NewlineAtEndOfFile">
        <property name="lineSeparator" value="lf"/>
    </module>

    <!-- File length limits -->
    <module name="FileLength">
        <property name="max" value="2000"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <!-- No tab characters -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Line length: 120 characters (aligned with project standards) -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <!-- TreeWalker for detailed Java checks -->
    <module name="TreeWalker">

        <!-- ===== NAMING CONVENTIONS ===== -->

        <!-- Package names: lowercase -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>

        <!-- Type names: PascalCase -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Method names: camelCase -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Parameter names: camelCase -->
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Local variable names: camelCase -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Member variable names: camelCase -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Static final constants: UPPER_SNAKE_CASE -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <!-- ===== IMPORTS ===== -->

        <!-- No star imports -->
        <module name="AvoidStarImport"/>

        <!-- No redundant imports -->
        <module name="RedundantImport"/>

        <!-- No unused imports -->
        <module name="UnusedImports"/>

        <!-- Import order -->
        <module name="ImportOrder">
            <property name="groups" value="/^java\./,javax,*,co.meshtrade"/>
            <property name="ordered" value="true"/>
            <property name="separated" value="true"/>
            <property name="option" value="top"/>
        </module>

        <!-- ===== SIZE VIOLATIONS ===== -->

        <!-- Method length limit -->
        <module name="MethodLength">
            <property name="max" value="150"/>
            <property name="countEmpty" value="false"/>
        </module>

        <!-- Parameter count limit -->
        <module name="ParameterNumber">
            <property name="max" value="7"/>
            <property name="ignoreOverriddenMethods" value="true"/>
        </module>

        <!-- Anonymous inner class length -->
        <module name="AnonInnerLength">
            <property name="max" value="20"/>
        </module>

        <!-- ===== WHITESPACE ===== -->

        <!-- Empty line separator between declarations -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
            <property name="allowMultipleEmptyLines" value="false"/>
        </module>

        <!-- Generic whitespace -->
        <module name="GenericWhitespace"/>

        <!-- Method parameter padding -->
        <module name="MethodParamPad"/>

        <!-- No whitespace after certain tokens -->
        <module name="NoWhitespaceAfter">
            <property name="tokens" value="ARRAY_INIT,AT,INC,DEC,UNARY_MINUS,UNARY_PLUS,BNOT,LNOT,DOT,ARRAY_DECLARATOR,INDEX_OP"/>
        </module>

        <!-- No whitespace before certain tokens -->
        <module name="NoWhitespaceBefore">
            <property name="tokens" value="COMMA,SEMI,POST_INC,POST_DEC,DOT,ELLIPSIS,METHOD_REF"/>
        </module>

        <!-- Whitespace after certain tokens -->
        <module name="WhitespaceAfter">
            <property name="tokens" value="COMMA,SEMI,TYPECAST,LITERAL_IF,LITERAL_ELSE,LITERAL_WHILE,LITERAL_DO,LITERAL_FOR,DO_WHILE"/>
        </module>

        <!-- Whitespace around operators -->
        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
            <property name="allowEmptyTypes" value="true"/>
            <property name="allowEmptyLoops" value="true"/>
        </module>

        <!-- ===== MODIFIERS ===== -->

        <!-- Modifier order -->
        <module name="ModifierOrder"/>

        <!-- Redundant modifiers -->
        <module name="RedundantModifier"/>

        <!-- ===== BLOCKS ===== -->

        <!-- Avoid nested blocks -->
        <module name="AvoidNestedBlocks"/>

        <!-- Empty blocks -->
        <module name="EmptyBlock">
            <property name="option" value="text"/>
        </module>

        <!-- Left curly brace placement -->
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>

        <!-- Right curly brace placement -->
        <module name="RightCurly">
            <property name="option" value="same"/>
        </module>

        <!-- Need braces for control structures -->
        <module name="NeedBraces"/>

        <!-- ===== CODING PRACTICES ===== -->

        <!-- Empty statement -->
        <module name="EmptyStatement"/>

        <!-- Equals/hashCode -->
        <module name="EqualsHashCode"/>

        <!-- Hidden field -->
        <module name="HiddenField">
            <property name="ignoreConstructorParameter" value="true"/>
            <property name="ignoreSetter" value="true"/>
        </module>

        <!-- Illegal instantiation -->
        <module name="IllegalInstantiation"/>

        <!-- Inner assignment -->
        <module name="InnerAssignment"/>

        <!-- Missing switch default -->
        <module name="MissingSwitchDefault"/>

        <!-- Multiple variable declarations -->
        <module name="MultipleVariableDeclarations"/>

        <!-- Simplified boolean expression -->
        <module name="SimplifyBooleanExpression"/>

        <!-- Simplified boolean return -->
        <module name="SimplifyBooleanReturn"/>

        <!-- String literal equality -->
        <module name="StringLiteralEquality"/>

        <!-- One statement per line -->
        <module name="OneStatementPerLine"/>

        <!-- Variable declaration usage distance -->
        <module name="VariableDeclarationUsageDistance">
            <property name="allowedDistance" value="5"/>
        </module>

        <!-- ===== CLASS DESIGN ===== -->

        <!-- Final class -->
        <module name="FinalClass"/>

        <!-- Hide utility class constructor -->
        <module name="HideUtilityClassConstructor"/>

        <!-- Interface is type -->
        <module name="InterfaceIsType"/>

        <!-- Visibility modifier -->
        <module name="VisibilityModifier">
            <property name="protectedAllowed" value="true"/>
            <property name="packageAllowed" value="true"/>
        </module>

        <!-- ===== JAVADOC ===== -->

        <!-- JavaDoc method -->
        <module name="MissingJavadocMethod">
            <property name="scope" value="public"/>
            <property name="allowMissingPropertyJavadoc" value="true"/>
        </module>

        <!-- JavaDoc type -->
        <module name="MissingJavadocType">
            <property name="scope" value="public"/>
        </module>

        <!-- JavaDoc style -->
        <module name="JavadocStyle">
            <property name="checkFirstSentence" value="false"/>
            <property name="checkEmptyJavadoc" value="true"/>
        </module>

        <!-- ===== MISCELLANEOUS ===== -->

        <!-- Array type style -->
        <module name="ArrayTypeStyle"/>

        <!-- Proper indentation -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="throwsIndent" value="4"/>
            <property name="lineWrappingIndentation" value="4"/>
            <property name="arrayInitIndent" value="4"/>
        </module>

        <!-- Upper ell (use 'L' not 'l' for long) -->
        <module name="UpperEll"/>

        <!-- Avoid escaped Unicode characters -->
        <module name="AvoidEscapedUnicodeCharacters">
            <property name="allowEscapesForControlCharacters" value="true"/>
            <property name="allowByTailComment" value="true"/>
            <property name="allowNonPrintableEscapes" value="true"/>
        </module>

    </module>
</module>
